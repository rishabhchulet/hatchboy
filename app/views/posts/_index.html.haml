.col-md-12
  .grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold Posts
      .tools
        %a.collapse{:href => "javascript:;"}
    .grid-body.no-border{:style => "display: block;"}
      .row
        %table.table.table-hover.table-striped.table-bordered.no-more-tables.action-list#posts-list
          %thead
            %tr
              %th #
              %th Subject
              %th Employee
              %th Files attached
              %th Sent At
          %tbody#posts
            - @posts.each do |post|
              = render post
      .row
        .col-md-12#new_post_form
          =render partial: "posts/form", :object => @post

