- if @owner == @recipient
  - owner = link_to 'You', @owner_url
- else
  - owner = link_to @owner.name, @owner_url

%tr
  %td.main{colspan: 2}= t ".message_html",
                        owner: owner,
                        document: link_to(@object.docu_template.title, docu_template_url(@object.docu_template))

= render partial: 'notifications_mailer/unsubscribe'
