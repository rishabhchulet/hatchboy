.grid.simple
  .grid-body.no-border{:style => "display: block;"}
    .row
      %table.table.table-hover.table-striped.table-bordered.no-more-tables.action-list#worklogs-list
        %thead
          %tr
            %th Team
            %th Time logged
            %th User
        %tbody
          - team_work_logs.grouped.each do |worklogs_list_row|
            %tr.data-row
              %td=link_to worklogs_list_row.team.name, team_path(worklogs_list_row.team)
              %td
                .pull-right{style: "padding-right:50%"}= nice_time_difference(worklogs_list_row.time)
              %td= link_to worklogs_list_row.user.name, user_path(worklogs_list_row.user)
    .row.pull-right
      %a.btn.btn-primary.btn-cons{href: new_team_work_log_path(team)}
        Add time log
    .row

