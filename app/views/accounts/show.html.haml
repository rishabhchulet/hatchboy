%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a.active{:href => account_path} Account
.row
  .col-md-11
    .page-title
      %i.icon-custom-ui
      %h3
        = @account.user.name
  .col-md-1.text-right
.row
  .col-md-12
    .row
      .col-md-12
        .grid.simple
          .grid-title.no-border
            %h4
              %span.semi-bold Personal information
            .tools
              %a.collapse{:href => "javascript:;"}
              =link_to "", edit_account_registration_path, :class => "config edit-account"
          .grid-body.no-border{:style => "display: block;"}
            .row
              .col-md-2
                %img{ "src" => @account.user.avatar.url, style: "max-width:200px;max-height:200px"}
              .col-md-4
                .row
                .row
                  .col-md-5
                    %label Name:
                  .col-md-7= @account.user.name
                .row
                  .col-md-5
                    %label Email:
                  .col-md-7= @account.email
                .row
                  .col-md-5
                    %label Password:
                  .col-md-7 *********
                .row
                  .col-md-5
                    %label Company:
                  .col-md-7= @account.user.company.name
                .row
                  .col-md-5
                    %label Payment information:
                  .col-md-7= simple_format(@account.payment_information)
.row
  .col-md-12
    = render "subscriptions/user_subscriptions"
