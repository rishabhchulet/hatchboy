.notification-messages.info
  .user-profile
    %img{width: 35, height: 35, src: activity.owner.avatar.url}
  .message-wrapper
    .heading
      =link_to activity.owner.name, activity.owner
      \- Added post
      - if activity.trackable
        = "to Team '#{activity.trackable.receiver.name}'"
    .description
      - begin
        - comments = JSON.parse activity.comments
        = "#{comments["subject"]}"
      - rescue
        it's name fell off the edge of the earth
  .date.pull-right
    = time_ago_in_words activity.created_at
    ago

