%ul.breadcrumb
  %li
    %p YOU ARE HERE
  %i.icon-angle-right
  %li
    %a.active{:href => tutorials_path} Tutorials

.page-title
  %i.icon-info
  %h3
    Tutorials

.row
  .grid.simple
    .grid-body
      %table#tutorials-table.table.table-striped{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th{:width => "40%"} Title
            %th{:width => "50%"} Video
        %tbody
          - @help_links.each do |help_link|
            %tr{ :class => cycle( 'even', 'odd' ), :id => help_link.id }
              %td= help_link.video_title
              %td
                %embed{:width => "360", :height => "215", :src => help_link.video_link, :type => "application/x-shockwave-flash"}

=content_for :page_specific_js do
  =javascript_include_tag "plugins/jquery-datatable/js/jquery.dataTables.min.js", "data-turbolinks-track" => true
  =javascript_include_tag "plugins/jquery-datatable/extra/js/TableTools.min.js", "data-turbolinks-track" => true
  =javascript_include_tag "data_table/ext.js", "data-turbolinks-track" => true

:coffeescript
  $ ->
    $('#tutorials-table').dataTable
      "sDom": "<'row'<'col-md-6'l><'col-md-6'f>r>t<'row'<'col-md-12'p i>>"