%ul.breadcrumb
  %li
    %p
      YOU ARE HERE
  %i.icon-angle-right
  %li
    %a{:href => company_path} Company
  %i.icon-angle-right
  %li
    %a{:href => sources_path} Sources
  %i.icon-angle-right
  %li
    %a.active{:href => trello_sources_path(@trello_source)}= @trello_source.name

.col-md-12
  .grid.simple
    .grid-title.no-border
      %h4
        %span.semi-bold View Trello source details
      .tools
        %a.reload{:href => "javascript:;"}
        %a.collapse{:href => "javascript:;"}
        = link_to "", edit_trello_source_path(@trello_source), :class => "config edit-trello-source"
    .grid-body.no-border{style: "display:block"}
      .row
        .col-md-2
          %label Name
        .col-md-4= @trello_source.name
      .row
        .col-md-2
          %label Url
        .col-md-4= @trello_source.url
      .row
        .col-md-2
          %label Consumer key
        .col-md-4= @trello_source.consumer_key
      .row
        .col-md-2
          %label Validated
        .col-md-4= !@trello_source.access_token.blank? ? "Yes" : "No"
      .row
        .col-md-2
          %label Last updated
        .col-md-4
          = @trello_source.updated_at
          = link_to trello_source_browse_path(@trello_source) do
            %i.icon-refresh

=render partial: "work_logs/source_work_logs", :object => @trello_source.worklogs

