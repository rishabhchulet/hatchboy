= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:method => :post, :role => "form" }) do |f|
  .row
    .col-md-1
    .col-md-4
      %h2.text-center Sign in
      = f.input :email, autofocus: true
      = f.input :password
      = f.input :remember_me, :as => :boolean, :wrapper => :inline_checkbox, checkbox_wrapper_html: { class: "check-default" }
      .form-group
        = f.submit  "Sign in", :class => 'btn btn-default text-center', :role => "button"

      = render "devise/shared/links"
