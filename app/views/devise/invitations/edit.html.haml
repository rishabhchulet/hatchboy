=form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  .row
    .col-md-1
    .col-md-4
      %h2.text-center= t('devise.invitations.edit.header')
      - if resource.errors.any?
        .alert.alert-danger= resource.errors.full_messages.first
      = f.hidden_field :invitation_token
      .form-group
        %label{:for => :password} Password
        = f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => "Password"
      .form-group
        %label{:for => :password_confirmation} Confirm Password
        = f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
      .form-group
        = f.submit t("devise.invitations.edit.submit_button"), :class => 'btn btn-default text-center', :role => "button"

      = render "devise/shared/links"
