= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:role => "form" }) do |f|
  .row
    .col-md-1
    .col-md-4
      %h2.text-center Forgot your password?
      - if resource.errors.any?
        .alert.alert-danger= resource.errors.full_messages.first
      .form-group
        %label{:for => "user_email"} Email
        = f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email", :autofocus => true
      .form-group
        = f.submit  "Send me reset password instructions", :class => 'btn btn-default text-center', :role => "button"

      = render "devise/shared/links" 
