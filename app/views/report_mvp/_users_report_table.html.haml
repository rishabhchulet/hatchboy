%table.table.table-hover.table-striped.table-bordered.no-more-tables.action-list#users-report-payments-list
  %thead
    %tr
      %th{:width => "2%"}
        .checkbox
          %input.checkall#checkall-mvp-users{type: 'checkbox', value: 1  }
          %label{for: 'checkall-mvp-users'}
      %th{:width => "49%"} User Name
      %th{:width => "49%"} Rating
  %tbody
    - if @mvp_report.scores and @mvp_report.scores.count > 0
      = render partial: "report_mvp/users_list_row", collection: @mvp_report.scores.sort_by{|s| -s[:rate]}, locals: {params: @mvp_report.params}
    - else 
      %tr.text-center
        %td{:colspan => "3"}
          No data to display